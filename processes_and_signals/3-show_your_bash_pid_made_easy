#!/usr/bin/env bash
# This script displays the PID and process name of processes containing the word "bash"
:'
# Find processes using the proc filesystem
for pid in /proc/*/; do
    pid=${pid%*/}
    pid=${pid##*/}
    
    # Retrieve the process name
    process_name=$(cat "/proc/$pid/comm" 2>/dev/null)
    
    # Check if the process name contains the word "bash"
    if [[ $process_name == *"bash"* ]]; then
        echo "PID: $pid, Process Name: $process_name"
    fi
done
'
pgrep bash -l
