#!/usr/bin/env bash
# This script manages manage_my_process

PID_FILE="/var/run/my_process.pid"
PROCESS_SCRIPT="manage_my_process"

start_process() {
    if [ -f "$PID_FILE" ]; then
        echo "Process is already running."
        exit 1
    fi

    ./"$PROCESS_SCRIPT" &
    echo "$!" > "$PID_FILE"
    echo "manage_my_process started"
}

stop_process() {
    if [ ! -f "$PID_FILE" ]; then
        echo "Process is not running."
        exit 1
    fi

    pid=$(cat "$PID_FILE")
    rm "$PID_FILE"
    kill "$pid"
    echo "manage_my_process stopped"
}

restart_process() {
    stop_process
    start_process
    echo "manage_my_process restarted"
}

case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

